  "sdk": 3,
  "platforms": [
    "local"
  ],
  "name": {
    "en": "Zigbee2MQTT"
  },
  "description": {
    "en": "Adds support for MyBrand devices."
  },
  "category": [
    "tools"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Stefan Schweiger",
    "email": "st.schweiger@me.com"
  },
  "brandColor": "#f7b31b",
  "api": {
    "connect": {
      "method": "POST",
      "path": "/connect"
    }
  },
  "flow": {
    "triggers": [
      {
        "title": {
          "en": "Bridge state changed"
        },
        "titleFormatted": {
          "en": "Bridge state changed to [[state]]"
        },
        "args": [
          {
            "name": "state",
            "type": "dropdown",
            "values": [
              {
                "id": "online",
                "label": {
                  "en": "Online"
                }
              },
              {
                "id": "offline",
                "label": {
                  "en": "Offline"
                }
              }
            ]
          }
        ],
        "id": "bridge_state"
      },
      {
        "id": "action",
        "title": {
          "en": "Action was triggered"
        },
        "titleFormatted": {
          "en": "Action [[action]] was triggered"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=device&capabilities=trigger_action"
          },
          {
            "type": "autocomplete",
            "name": "action",
            "placeholder": {
              "en": "Action"
            }
          }
        ]
      },
      {
        "id": "onoff.endpoint",
        "title": {
          "en": "Endpoint was turned on or off"
        },
        "titleFormatted": {
          "en": "[[endpoint]] was turned [[val]]"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=device&capabilities=onoff.left|onoff.center|onoff.right|onoff.l1|onoff.l2|onoff.white|onoff.rgb"
          },
          {
            "type": "autocomplete",
            "name": "endpoint",
            "placeholder": {
              "en": "Endpoint"
            }
          },
          {
            "type": "dropdown",
            "name": "val",
            "title": {
              "en": "on or off"
            },
            "values": [
              {
                "id": "on",
                "title": {
                  "en": "on"
                }
              },
              {
                "id": "off",
                "title": {
                  "en": "off"
                }
              }
            ]
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "effect",
        "title": {
          "en": "Trigger effect"
        },
        "titleFormatted": {
          "en": "Trigger [[effect]] effect"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=device&capabilities=action_effect"
          },
          {
            "type": "autocomplete",
            "name": "effect",
            "placeholder": {
              "en": "Effect"
            }
          }
        ]
      },
      {
        "id": "onoff.endpoint",
        "title": {
          "en": "Turn Endpoint on or off"
        },
        "titleFormatted": {
          "en": "Turn [[endpoint]] [[val]]"
        },
        "highlight": true,
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=device&capabilities=onoff.left|onoff.center|onoff.right|onoff.l1|onoff.l2|onoff.white|onoff.rgb"
          },
          {
            "type": "autocomplete",
            "name": "endpoint",
            "placeholder": {
              "en": "Endpoint"
            }
          },
          {
            "type": "dropdown",
            "name": "val",
            "title": {
              "en": "on or off"
            },
            "values": [
              {
                "id": "on",
                "title": {
                  "en": "on"
                }
              },
              {
                "id": "off",
                "title": {
                  "en": "off"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "dim.endpoint",
        "title": {
          "en": "Dim Endpoint"
        },
        "titleFormatted": {
          "en": "Dim [[endpoint]] to [[val]]"
        },
        "highlight": true,
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=device&capabilities=dim.left|dim.center|dim.right|dim.l1|dim.l2|dim.white|dim.rgb"
          },
          {
            "type": "autocomplete",
            "name": "endpoint",
            "placeholder": {
              "en": "Endpoint"
            }
          },
          {
            "name": "val",
            "type": "range",
            "min": 0,
            "max": 1,
            "step": 0.01,
            "value": 0.5,
            "label": "%",
            "labelMultiplier": 100,
            "labelDecimals": 0
          }
        ]
      }
    ]
  },
